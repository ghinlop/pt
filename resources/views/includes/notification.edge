@if(flashMessage('notification'))
    <div class="uk-alert-{{flashMessage('notification.type')}}" uk-alert>
      <a class="uk-alert-close" uk-close></a>
      @if(flashMessage('notification.type') === 'danger')
        <ul>
          @each(msg in flashMessage('notification.msg'))
            @if(msg.message)
            <li>{{msg.message}}</li>
            @else
            <li>{{{msg}}}</li>
            @endif
          @endeach
        </ul>
      @endif

      @if(flashMessage('notification.type') === 'success')
        @each(msg in flashMessage('notification.msg'))
          <P>{{{msg}}}</P>
        @endeach
      @endif
    </div>
@endif
